@page
@model AfzaSlaughter.Pages.SignupModel
@{
    ViewData["Title"] = "Signup page";
}

<section>
    <div class="row" style="margin-top: 15%;">
        <div class="col-md-4">
            <video autoplay muted loop style="width:100%">
                <source src="~/Video/WhatsApp%20Video%202021-06-12%20at%204.50.57%20PM.mp4" type="video/mp4" />
            </video>
        </div>
        <div class="col-md-4 text-center" style="background-color: #6E82A1;">
            <form action="" method="post">
                <div>
                    <input type="text" asp-for="user.username"  class="form-control" id="colFormLabel"  placeholder="username" required />
                </div>
                <br />
                <div>
                    <input type="email" asp-for="user.email"  class="form-control" id="colFormLabel"  placeholder="email address" required />
                </div>
                <br />
                <div>
                    <input type="password" asp-for="user.password"  class="form-control" id="colFormLabel"  placeholder="password" required />
                </div>
                <div>
                    <input type="submit" value="Signup" class="btn btn-primary" />
                    <p style="color:red"><b>@Model.error</b></p>
                </div>
             </form>
        </div>
        <div class="col-md-4">
            <video autoplay muted loop style="width: 100%">
                <source src="~/Video/120803224_672746616703445_7093927697859656953_n.mp4" type="video/mp4" />
            </video>
        </div>
    </div>
</section>